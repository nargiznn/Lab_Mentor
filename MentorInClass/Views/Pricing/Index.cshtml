                            <h4><sup>$</sup>@item.Price<span> / month</span></h4>
                            <ul>
                                @foreach(var feature in Model.Features)
                                {
                                    <li class="@(item.CardFeatures.Find(x=>x.FeatureId==feature.Id)==null?"na":"")">@feature.Name</li>
                                }
                                
                            </ul>
                            <div class="btn-wrap">
                                <a href="#" class="btn-buy">@item.BtnContext</a>
                            </div>
                        </div>
                    </div>
                }

